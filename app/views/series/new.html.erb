<h1>Crear una nueva serie</h1>
<br>

<%= form_with model: @serie, url: series_index_path, method: :post do |form| %>
<div class="col-8">
    <div>
        <%= form.label :name, "Nombre de la serie:",class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
    </div>
    <br>

     <div>
        <%= form.label :synopsis, "Sinopsis:",class: "form-label" %>
        <%= form.text_field :synopsis, class: "form-control" %>
    </div>
    <br>

     <div>
        <%= form.label :director, "Director:",class: "form-label" %>
        <%= form.text_field :director, class: "form-control" %>
    </div>
    <br>

    <div>
        <%= form.submit "Crear", class: "btn btn-primary" %>
    </div>
</div>
<% end %>


